<!-- login.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <section>
        <img src="https://images.pexels.com/photos/531880/pexels-photo-531880.jpeg?cs=srgb&dl=pexels-pixabay-531880.jpg&fm=jpg">
        <div class="signin">
            <div class="content">
                <h2>Sign In</h2>
                <h4 class="text-danger">{{msg}}</h4>
                <h4 class="text-danger">{{msg1}}</h4>
                <div class="form">
                    <form action="/user/verifyUser" method="post" novalidate onsubmit="return validateForm()">
                        <div class="inputBox">
                            <input type="text" name="username" id="username">
                            <i>Username</i>
                        </div>
                        <div class="inputBox">
                            <input name="password" type="password" id="password">
                            <i>Password</i>
                        </div>
                        <div class="inputBox">
                            <input type="hidden" name="loginType" id="loginType" value="User Login">
                            <input class="log" id="loginButton" type="submit" value="User Login">
                        </div>
                        <div class="links">
                            <a href="#">Forgot Password</a>
                            <a href="#" id="adminClick">Admin Click Here</a>
                            <a href="/signUp">Signup</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <script>
        function validateForm() {
            var username = document.getElementById('username').value;
            var password = document.getElementById('password').value;
            if (!username || !password) {
                document.querySelector('.text-danger').innerText = 'Username and password are required.';
                return false;
            }
            return true;
        }

        let loginButton = document.getElementById('loginButton');
        let adminClick = document.getElementById('adminClick');
        let loginForm = document.querySelector('form');

        adminClick.addEventListener('click', function(event) {
            event.preventDefault(); 
            if (loginButton.value === "User Login") {
                loginButton.value = "Admin Login";
                adminClick.textContent = "User Click Here";
                loginForm.action = "/admin/verifyAdmin";  
            } else {
                loginButton.value = "User Login";
                adminClick.textContent = "Admin Click Here";
                loginForm.action = "/user/verifyUser";  
            }
        });
    </script>
</body>
</html>
